<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href='styles.css' rel='stylesheet' type='text/css'>
    <title>CRM Music School</title>
  </head>
  <body>
    <div class="container">
      <div class="nav-bar">
        <div class="logo">
          <img src="img/splogo.jpg" alt="logo">
          <h1></h1>
          <p class="intro"></p>
        </div>
        <div class="center-div">
          <div class="sidebar">
            <ul>
              <li>teachers</li>
              <li>students</li>
              <li>accounts</li>
              <li>events</li>
              <li>billing</li>
            </ul>
          </div> <!--sidebar-->
        </div> <!--logo-->
      </div> <!--nav-bar-->
      <div class="row">
        <div class="col-md-8">
          <div class="jumbotron">
            <h1>{{ student.getName }}</h1>
            <p></p>
            <ul>
              <li>  instrument: <strong> {{ student.getInstrument }}</strong></li>
              <li>  assigned teacher: <strong>{{ assigned_teacher.getName }}</strong> (id:{{ assigned_teacher.getId }})</li>
            </ul>
            <form action="/students/{{ student.getId }}" method="post">
              <input name="_method" type="hidden" value="patch" required>
              <label for="new_notes">add notes...</label><br>
              <textarea name="new_notes" rows="3" cols="40"></textarea><br>
              <input type="reset">
              <button type="submit" class="btn button-success" name="button">Submit</button>
            </form>
          </div>
          <!-- jumbotron -->
        </div>
        <!-- left column -->
        <div class="col-md-4">
          <form action="/students/student_termination/{{ student.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">
              <button type="submit" name="button">Delete Student</button>
          </form>
        </div>
        <!-- delete column -->
      </div>
      <!-- row -->

      <div class="jumbotron">
      {% if notes_array is not empty %}
        <div class="well">
          <ul>
            <label>notes:</label>
            {% for note in notes_array %}
            <li><strong>{{ note }}</strong></li>
            <p></p><br>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
      <!-- well -->
      </div>
      <!-- jumbotron -->
    </div>
    <!-- container -->
  </body>
</html>
